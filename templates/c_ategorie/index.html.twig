{% extends 'base.html.twig' %}

{% block title %}CAtegorie index{% endblock %}

{% block body %}
    <h1>CAtegorie index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Libelle</th>
                <th>Contenu</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for c_ategorie in c_ategories %}
            <tr>
                <td>{{ c_ategorie.id }}</td>
                <td>{{ c_ategorie.libelle }}</td>
                <td>{{ c_ategorie.contenu }}</td>
                <td>
                    <a href="{{ path('c_ategorie_show', {'id': c_ategorie.id}) }}">show</a>
                    <a href="{{ path('c_ategorie_edit', {'id': c_ategorie.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('c_ategorie_new') }}">Create new</a>
{% endblock %}
